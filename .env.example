# PostgreSQL connection (example for local/docker)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=testdb

# A convenience DATABASE_URL derived from the above (used by the app)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/testdb
DATABASE_SSL=false

# JWT + app settings
JWT_SECRET=replace_with_a_long_random_secret
PORT=3000
RESET_TOKEN_EXPIRY_MINUTES=30
SALT_ROUNDS=12

# PG pool tuning
PG_MAX_CLIENTS=10
PG_IDLE_TIMEOUT_MS=30000
PG_CONN_TIMEOUT_MS=2000
